<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#10000000"
    android:orientation="vertical"
    android:id="@+id/rel2">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/lin"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:baselineAligned="false"
        android:weightSum="1">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            card_view:cardElevation="6dp"
            android:layout_margin="2dp"
            card_view:cardUseCompatPadding="true"

            android:layout_weight="1.45">

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true" >



                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:fab="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel">



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fNameLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        >

                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:color="@android:color/white"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fNameLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/fNameLayout"
                        android:layout_centerHorizontal="true"
                        >

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText4"
                            android:color="@android:color/white"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fNameLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/fNameLayout4"
                        android:layout_centerHorizontal="true"
                        >

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText1"
                            android:color="@android:color/white"
                            android:ems="10"
                            android:inputType="textPassword"

                            android:singleLine="true"
                            android:layout_centerHorizontal="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fNameLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/fNameLayout2"
                        android:layout_centerHorizontal="true"
                        >

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:color="@android:color/white"
                            android:id="@+id/editText2"
                            android:ems="10"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true" />

                    </android.support.design.widget.TextInputLayout>



                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_accept"
                        fab:fab_colorNormal="#e91e63"
                        fab:fab_colorPressed="#e91e63"
                        fab:fab_colorRipple="#c2185b"
                        android:layout_below="@+id/fNameLayout3"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />




                </RelativeLayout>

            </ScrollView>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView"
        android:layout_above="@+id/lin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>










